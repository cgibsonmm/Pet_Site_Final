.image_grid
  - @posts.each do |post|
    .image_box
      .user_name
        = post.user.user_name
      .pet_photo
        = link_to image_tag(post.image.url(:medium)), photo_post_path(post)
      .caption
        = post.caption
      .comment_section
        - if post.comments
          = render 'comments/comment', post: post 
        = form_for [post, post.comments.build] do |f|
          = f.text_field :content, placeholder: 'Add Comment'
          = f.button 'Submit'
